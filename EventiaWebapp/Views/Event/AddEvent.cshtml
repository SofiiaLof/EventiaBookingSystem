@model EventiaWebapp.Models.Event
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




    <form method="post">
        <div class="mb-3">
            <label asp-for="Title" for="title" class="form-label">Title:</label>
            <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Title">
        </div>
        <div class="mb-3">
            <label asp-for="Description" for="textarea" class="form-label">Description:</label>
            <textarea asp-for="Description" class="form-control" id="textarea" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Date" for="date" class="form-label">Date:</label>
            <input asp-for="Date" type="date" class="form-control" id="date" placeholder="Date">
        </div>

        <div class="col-auto">
            <button asp-controller="Event" asp-action="AddEvent"  type="submit" class="btn btn-primary mb-3">Submit</button>
        </div>
    </form>


